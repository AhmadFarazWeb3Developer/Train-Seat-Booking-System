<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Admin - Add Train</title>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <div class="container mx-auto py-6">
      <h1 class="text-xl font-semibold text-center text-indigo-600 mb-6">
        Admin - Add Train
      </h1>

      <div
        class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6 border-[1px] border-zinc-300"
      >
        <form action="/admin/train/add" method="POST" class="space-y-4">
          <!-- Train Name -->
          <div>
            <label class="block text-sm font-medium mb-1" for="train_name">
              Train Name
            </label>
            <input
              type="text"
              id="train_name"
              name="train_name"
              placeholder="Enter train name"
              class="w-full rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-2 border-[1px] border-zinc-400"
              required
            />
          </div>

          <!-- Train Type -->
          <div>
            <label class="block text-sm font-medium mb-1" for="train_type">
              Train Type
            </label>
            <input
              type="text"
              id="train_type"
              name="train_type"
              placeholder="Enter train type (e.g., Express)"
              class="w-full rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-2 border-[1px] border-zinc-400"
              required
            />
          </div>

          <!-- Available Seats -->
          <div>
            <label class="block text-sm font-medium mb-1" for="availableSeats">
              Total Seats
            </label>
            <input
              type="number"
              id="total_seats"
              name="total_seats"
              placeholder="Enter total number of seats"
              class="w-full rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-2 border-[1px] border-zinc-400"
              required
            />
          </div>

          <button
            type="submit"
            class="w-full bg-indigo-500 text-white font-semibold py-2 px-4 rounded-md shadow-sm hover:bg-indigo-600 cursor-pointer"
          >
            Add Train
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
